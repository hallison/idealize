<!doctype html>
<html lang="pt">
<head>
  <%=partial 'layout-http-head'%>
</head>

<body>
  <div class="prd-layout mdl-layout mdl-js-layout mdl-layout--fixed-header mdl-layout--no-drawer-button">
    <%=partial 'layout-header'%>
    <%=partial 'layout-drawer'%>

    <main class="mdl-layout__content">
      <div class="prd-ribbon"></div>
      <div class="prd-content prd-content--with-ribbon prd-content--with-background">
        <%=yield%>
        <%=yield_content :fab%>
      </div>
      <%=partial 'layout-footer'%>
    </main>
  </div>

  <%unless authenticated?%>
    <%=partial 'layout-dialog-signin'%>
  <%else%>
    <%=yield_content :dialog%>
  <%end%>

  <script src="<%=path_to '/src/material-design-lite/material.min.js'%>"></script>

  <%if message[:text]%>
    <%=partial 'layout-notification'%>
  <%end%>

  <%=yield_content :script%>
</body>
</html>
